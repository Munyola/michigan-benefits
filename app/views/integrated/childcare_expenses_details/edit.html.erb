<% content_for :header_title, "Household Expenses" %>

<% content_for :form_card_title, "Tell us about your childcare expenses." %>

<% content_for :form_card_body do %>
    <%= fields_for(:form, @form, builder: MbFormBuilder) do |f| %>
      <%= f.mb_money_field :amount, "Monthly amount" %>
      <%= f.mb_collection_check_boxes(
            :member_ids, members, :id, :display_name, label_text: "Paid for by", options: {include_hidden: false}) %>
    <% end %>
<% end %>
