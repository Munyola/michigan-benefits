<% content_for :header_title, "Introduction" %>

<% content_for :form_card_header do %>
  <h1 class="form-card__title">Apply for <%= program_descriptions %>.</h1>
  <p class="text--centered text--help">
    This site is for Michigan residents only. To apply for coverage in your state:
  </p>
<% end %>

<% content_for :form_card_body do %>
  <% if current_application.navigator.applying_for_healthcare? %>
    <div class="form-card__button_centered">
      <a href="https://www.healthcare.gov/medicaid-chip/getting-medicaid-chip/" class="button button--nav  button--cta button--full-mobile">
        Visit Healthcare.gov for health coverage
      </a>
    </div>
  <% end %>
  <% if current_application.navigator.applying_for_food? %>
    <div class="form-card__button_centered">
      <a href="https://www.fns.usda.gov/snap/apply" class="button button--nav  button--cta button--full-mobile">
        Visit FNS.USDA.gov for food assistance
      </a>
    </div>
  <% end %>
<% end %>
<% content_for :skip_footer, true %>
